// don't use form for, use form tag because there is no model for sessions

%h2.form-signin Log In
= form_tag sessions_path do
  .form-group
    = label_tag :email
    %br/
    = email_field_tag :email
  .form-group
    = label_tag :password
    %br/
    = password_field_tag :password
    %br/
  = submit_tag 'Login', class: 'btn btn-default'