.col-xs-6.col-md-4
  %h2.form-signin-heading Create Account
  = form_for([:admin, @user]) do |f|
    .form-group
      = f.label :role
      %br/
      = f.select :role, options_for_select(User.uniq.pluck(:role), 'role')
    .form-group
      = f.label :first_name
      %br/
      = f.text_field :first_name
    .form-group
      = f.label :last_name
      %br/
      = f.text_field :last_name
    .form-group
      = f.label :email
      %br/      
      = f.email_field :email
    .form-group
      = f.label :password
      %br/      
      = f.password_field :password
    .form-group
      = f.label :password_confirmation
      %br/      
      = f.password_field :password_confirmation
    .form-group
      = f.submit(class: 'btn btn-default')
    



